        <script>
            function toggleMenu() {
                const menuList = document.getElementById('menuList');
                if (menuList.style.maxHeight) {
                    menuList.style.maxHeight = null;
                } else {
                    menuList.style.maxHeight = menuList.scrollHeight + "px";
                }
            }
            // Optional: Smooth scroll (if anchors have #ids in future)
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Optional: Highlight cards on click or focus (future interaction idea)
            document.querySelectorAll('.card').forEach(card => {
                card.addEventListener('click', (event) => {
                    event.preventDefault(); // Prevent default link behavior if any

                    const userType = "<%= userType %>";
                    if (userType === 'seeker') {
                        window.location.href = '/seekerdash';
                    } else if (userType === 'user') {
                        const clickedH2Text = card.querySelector('h2').innerText.trim();
                        const role = encodeURIComponent(clickedH2Text); // Encode the role for URL
                        window.location.href = `/workers?role=${role}`;
                    } else {
                        window.location.href = '/login/user';
                    }
                });
            });

            

